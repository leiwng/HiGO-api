# FastAPI
APP_NAME=Pet Medical API
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=pet_medical

# Redis
REDIS_URL=redis://localhost:6379

# JWT (请修改为您自己的密钥)
JWT_SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# 用户认证配置
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# LLM Models (请配置您的实际API)
OPENAI_BASE_URL=https://your-llm-api-endpoint/v1/
OPENAI_API_KEY=your-api-key-here
LLM_MODEL=your-model-name

# Multimodal API (请配置您的实际API)
MULTIMODAL_BASE_URL=https://your-multimodal-api-endpoint
MULTIMODAL_API_KEY=your-api-key-here
MULTIMODAL_API_SECRET=your-api-secret-here

# Pet Info API (请配置您的实际API)
PET_INFO_BASE_URL=https://your-pet-info-api-endpoint/v1
PET_INFO_CLIENT_ID=your-client-id
PET_INFO_CLIENT_SECRET=your-client-secret